<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity.InMeetingFragment"
    android:background="@drawable/gradient_animation"
    android:id="@+id/InMeeting"
    >

    <ImageButton
        android:id="@+id/transcriptionStartPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="376dp"
        android:background="@drawable/round_button"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/StopButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pause" />

    <ImageButton
        android:id="@+id/transcriptionStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="379dp"
        android:background="@drawable/round_button"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/stop" />

    <Button
        android:id="@+id/TranscriptionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="view transcriptions"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/NotesButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/NotesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="write notes"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/transcriptionTextView"
        android:layout_width="285dp"
        android:layout_height="641dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="56dp"
        android:background="@color/white"
        android:elevation="5dp"
        android:visibility="invisible"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>