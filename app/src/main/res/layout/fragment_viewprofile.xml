<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F2F0"
    android:orientation="vertical">
    <view
        android:id="@+id/view"
        class="com.google.android.material.navigation.NavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#F97E2C"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars[3]" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="Profile picture"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="Full name"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editText2"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:hint="Erik Sundberg"
            android:background="@null"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="Password"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editText3"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:hint="Enter new password"
            android:background="@null"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="E-mail"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editText1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:hint="Erik.sundberg@email.com"
            android:background="@null"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="Language"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editText5"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:hint="English"
            android:background="@null"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="Notification settings"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>

