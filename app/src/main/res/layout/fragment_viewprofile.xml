<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F2F0"
    android:orientation="vertical"
    android:id="@+id/viewprofile"
    tools:context=".ViewProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_weight="1.7"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/profile_picture"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="52dp"
            android:layout_height="37dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/tom" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/full_name"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewProfileFullName"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical|right"
            android:text="Erik Sundberg"
            android:textColor="#86000000"
            android:textSize="18dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:text="@string/password"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/viewProfilePassword"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical|right"
            android:text="********"
            android:textColor="#86000000"
            android:textSize="18dp"
            android:textStyle="normal" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:text="@string/email"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/viewProfileEmail"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical|right"
            android:text="Erik.sundberg@email.com"
            android:textColor="#86000000"
            android:textSize="18dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:background="#79858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/language"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewProfileLanguage"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical|right"
            android:text="English"
            android:textColor="#86000000"
            android:textSize="18dp" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/notification_settings"
            android:textColor="#F0000000"
            android:textSize="18dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:background="#79858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonViewProfileLogout"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/log_out"
            android:textColor="#FF0202"
            android:textSize="18dp"
            android:textStyle="bold"
            android:backgroundTint="@color/Transparent"
            style="?android:attr/borderlessButtonStyle"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:background="#79858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
</LinearLayout>

