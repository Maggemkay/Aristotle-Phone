<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F2F0"
    android:orientation="vertical"
    android:id="@+id/viewprofile"
    tools:context=".ViewProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_weight="1.7"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="Profile picture"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center_vertical|right"
            tools:srcCompat="@tools:sample/avatars[3]" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="Full name"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical|right"
            android:text="Erik Sundberg"
            android:textColor="#86000000"
            android:textSize="18dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="Password"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textView13"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical|right"
            android:text="********"
            android:textColor="#86000000"
            android:textSize="18dp"
            android:textStyle="normal" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="E-mail"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textView14"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical|right"
            android:text="Erik.sundberg@email.com"
            android:textColor="#86000000"
            android:textSize="18dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:background="#79858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="Language"
            android:textColor="#F0000000"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical|right"
            android:text="English"
            android:textColor="#86000000"
            android:textSize="18dp" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_bold"
            android:text="Notification settings"
            android:textColor="#F0000000"
            android:textSize="18dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:background="#79858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_bold"
            android:text="LOG OUT"
            android:textColor="#FF0202"
            android:textSize="16dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1mm"
        android:background="#79858181"
        android:visibility="visible"
        android:layout_marginHorizontal="15dp"/>
</LinearLayout>

